# RGrid Development Environment Configuration
# Copy this file to .env and fill in the values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://rgrid:rgrid_dev@localhost:5433/rgrid

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=rgrid_dev
MINIO_SECRET_KEY=rgrid_dev_secret
MINIO_BUCKET_NAME=rgrid

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Secret Keys (generate secure values for production)
API_SECRET_KEY=dev_secret_key_change_in_production

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Log Level
LOG_LEVEL=DEBUG

# Hetzner Cloud Configuration (Tier 4 - Distributed Execution)
# Get API token from: https://console.hetzner.cloud/projects > Security > API Tokens
HETZNER_API_TOKEN=your_hetzner_api_token_here
HETZNER_SSH_KEY_PATH=infra/hetzner_worker.key
